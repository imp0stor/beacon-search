{
  "name": "beacon-search-backend",
  "version": "1.0.0",
  "description": "Beacon Search API with pgvector",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "spider": "ts-node src/ingestion/run-spider.ts",
    "spider:small": "ts-node src/ingestion/run-spider.ts recent_quality",
    "spider:medium": "ts-node src/ingestion/run-spider.ts popular_content",
    "spider:large": "ts-node src/ingestion/run-spider.ts comprehensive_crawl",
    "spider:full-history": "ts-node src/ingestion/run-full-history.ts",
    "spider:adaptive": "ts-node src/ingestion/run-adaptive-crawler.ts",
    "spider:authors": "ts-node src/ingestion/run-author-crawler.ts",
    "podcast:bulk-ingest": "ts-node src/podcasts/bulk-ingest.ts",
    "test:frpei": "npm run build && node --test tests/frpei-core.test.js tests/frpei.unit.test.js tests/frpei.smoke.test.js",
    "test:quality": "npm run build && node --test tests/quality.test.js",
    "test": "npm run build && node --test tests/frpei-core.test.js tests/frpei.unit.test.js tests/frpei.smoke.test.js tests/quality.test.js tests/admin/servers.test.js tests/admin/crawlers.test.js tests/admin/dashboard.test.js tests/connectors/BaseConnector.test.js tests/connectors/ProductCrawler.test.js tests/connectors/NostrConnector.test.js tests/sync/SyncScheduler.test.js tests/sync/SyncExecutor.test.js"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.1",
    "cheerio": "^1.0.0-rc.12",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "franc": "^6.2.0",
    "iso-639-3": "^3.0.1",
    "js-yaml": "^4.1.0",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.18.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "nostr-tools": "^2.23.1",
    "pdf-parse": "^1.1.1",
    "pdf-to-img": "^5.0.0",
    "pg": "^8.11.3",
    "rss-parser": "^3.13.0",
    "sharp": "^0.33.2",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.0",
    "websocket-polyfill": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.9",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
